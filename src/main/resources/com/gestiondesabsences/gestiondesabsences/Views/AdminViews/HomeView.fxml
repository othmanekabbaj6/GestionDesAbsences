<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400"
            prefWidth="600"
            stylesheets="@../../Design/AdminDashboard.css"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.gestiondesabsences.gestiondesabsences.controllers.AdminDashboardController">

    <GridPane alignment="CENTER"
              hgap="25"
              vgap="25"
              AnchorPane.topAnchor="0.0"
              AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0">

        <!-- TOTAL STUDENTS -->
        <VBox alignment="CENTER" prefHeight="120" prefWidth="220">
            <Label text="Total Students" styleClass="card-title"/>
            <Label fx:id="studentsCountLabel" text="0" styleClass="card-value"/>
            <styleClass>
                <String fx:value="dashboard-card"/>
                <String fx:value="blue"/>
            </styleClass>
        </VBox>

        <!-- TOTAL CLASSES -->
        <VBox alignment="CENTER" prefHeight="120" prefWidth="220" GridPane.columnIndex="1">
            <Label text="Total Classes" styleClass="card-title"/>
            <Label fx:id="classesCountLabel" text="0" styleClass="card-value"/>
            <styleClass>
                <String fx:value="dashboard-card"/>
                <String fx:value="purple"/>
            </styleClass>
        </VBox>

        <!-- TOTAL MAJORS -->
        <VBox alignment="CENTER" prefHeight="120" prefWidth="220" GridPane.rowIndex="1">
            <Label text="Total Majors" styleClass="card-title"/>
            <Label fx:id="majorsCountLabel" text="0" styleClass="card-value"/>
            <styleClass>
                <String fx:value="dashboard-card"/>
                <String fx:value="green"/>
            </styleClass>
        </VBox>

        <!-- TOTAL MODULES -->
        <VBox alignment="CENTER" prefHeight="120" prefWidth="220"
              GridPane.columnIndex="1" GridPane.rowIndex="1">
            <Label text="Total Modules" styleClass="card-title"/>
            <Label fx:id="modulesCountLabel" text="0" styleClass="card-value"/>
            <styleClass>
                <String fx:value="dashboard-card"/>
                <String fx:value="red"/>
            </styleClass>
        </VBox>

        <columnConstraints>
            <ColumnConstraints/>
            <ColumnConstraints/>
        </columnConstraints>

        <rowConstraints>
            <RowConstraints/>
            <RowConstraints/>
        </rowConstraints>

    </GridPane>
</AnchorPane>
